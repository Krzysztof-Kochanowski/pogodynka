{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
    <h1>City</h1>

    <table class="table">
        <tbody>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
        {% endif %}
        <tr>
            <th>Name</th>
            <td>{{ city.name }}</td>
        </tr>
        <tr>
            <th>Latitude</th>
            <td>{{ city.latitude }}</td>
        </tr>
        <tr>
            <th>Longitude</th>
            <td>{{ city.longitude }}</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>
                <a href="{{ path('app_country_show', {'id': city.country.id}) }}">{{ city.country }}</a>
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_city_index') }}">back to list</a>

    {% if is_granted('ROLE_CITY_EDIT') %}
        <a href="{{ path('app_city_edit', {'id': city.id}) }}">edit</a>
    {% endif %}

    {% if is_granted('ROLE_CARTOGRAPHER') %}
        {{ include('city/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
