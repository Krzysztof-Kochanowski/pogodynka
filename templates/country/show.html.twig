{% extends 'base.html.twig' %}

{% block title %}Country{% endblock %}

{% block body %}
    <h1>Country</h1>

    <table class="table">
        <tbody>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
        {% endif %}
        <tr>
            <th>Name</th>
            <td>{{ country.name }}</td>
        </tr>
        <tr>
            <th>Country_code</th>
            <td>{{ country.countryCode }}</td>
        </tr>
        <tr>
            <th>Capital_name</th>
            <td>{{ country.capitalName }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_country_index') }}">back to list</a>

    {% if is_granted('ROLE_CARTOGRAPHER') %}
        <a href="{{ path('app_country_edit', {'id': country.id}) }}">edit</a>

        {{ include('country/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
